{
	"extends": "@kittr/config/tsconfig/base.json",
	"compilerOptions": {
		"outDir": "dist",
		"module": "commonjs",
		"baseUrl": "./src",
		"paths": {
			"@Jobs/*": ["./jobs/*"],
			"@Services/*": ["./services/*"],
			"@Types/*": ["./types/*"],
			"@Utils/*": ["./utils/*"]
		}
	},
	"include": ["./src"],
	"exclude": ["node_modules", "dist"]
}
