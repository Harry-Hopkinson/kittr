{
	"compilerOptions": {
		"outDir": "dist/src",
		"baseUrl": "./src",
		"module": "commonjs",
		"target": "es2015",
		"lib": ["es2017"],
		"strictNullChecks": true,
		"noImplicitAny": false,
		"preserveConstEnums": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"incremental": true,
		"paths": {
			"@Jobs/*": ["./jobs/*"],
			"@Services/*": ["./services/*"],
			"@Types/*": ["./types/*"],
			"@Utils/*": ["./utils/*"]
		}
	},
	"include": ["src/"],
	"exclude": ["node_modules", ".turbo", "coverage", "build"]
}
